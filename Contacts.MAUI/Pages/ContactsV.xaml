<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Contacts.MAUI.Pages.ContactsV"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Contacts.MAUI.Pages">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
        <CollectionView ItemsSource="{Binding Contacts}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <BoxView Color="CornflowerBlue" Grid.Column="0"/>
                        <Label Grid.Column="0" Text="{Binding Name}"/>
                        <BoxView Color="CornflowerBlue" Grid.Column="1"/>
                        <Label Grid.Column="1" Text="{Binding Surname}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>